@model Book
@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="card-title fw-bold text-dark mb-3">@Model.Title</h1>
                    <p class="card-text"><strong>Автор:</strong> @Model.Author</p>
                    <p class="card-text text-muted">@Model.Description</p>
                    <p class="card-text"><strong>Ціна:</strong> <span class="text-success fw-bold">@Model.Price.ToString("C")</span></p>
                    <button onclick="updateCartWiggle(@Model.Id)" class="btn btn-success btn-custom w-100 btn-add-to-cart">
                            <i class="bi bi-cart-plus me-2"></i>Додати в корзину
                </div>
            </div>
        </div>
    </div>
</div>
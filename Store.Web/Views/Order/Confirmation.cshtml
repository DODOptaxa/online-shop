@model ConfirmationViewModel
@{
    ViewData["Title"] = "Підтвердження номера";
}

<div class="container py-5">
    <h1 class="mb-4 fw-bold text-dark">Підтвердження номера</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="@Url.Action("Confirmate")" method="post" class="card p-4 shadow-sm">
                <input type="hidden" name="id" value="@Model.OrderId" />
                <input type="hidden" name="cellPhone" value="@Model.CellPhone" />
                <div class="mb-3">
                    <label for="code" class="form-label">Код підтвердження</label>
                    <input type="text" class="form-control code" name="code" placeholder="0000" maxlength="4" />
                    @if (Model.Errors.ContainsKey("code"))
                    {
                        <small class="text-danger">@Model.Errors["code"]</small>
                    }
                </div>
                <button type="submit" class="btn btn-success btn-custom w-100">Перевірити</button>
            </form>
            <form action="@Url.Action("SendConfirmationCode")" method="post" class="card p-4 shadow-sm mt-4">
                <input type="hidden" name="id" value="@Model.OrderId" />
                <div class="mb-3">
                    <label for="cellPhone" class="form-label">Змінити номер</label>
                    <div class="input-group">
                        <span class="input-group-text phone-input-prefix">+380</span>
                        <input type="text" class="form-control phone-input-field" name="cellPhone" value="@Model.CellPhone" placeholder="00-000-0000" />
                    </div>
                    @if (Model.Errors.ContainsKey("cellPhone"))
                    {
                        <small class="text-danger">@Model.Errors["cellPhone"]</small>
                    }
                </div>
                <input type="hidden" name="reset" value="true" />
                <button type="submit" class="btn btn-outline-success btn-custom w-100">Відправити код повторно</button>
            </form>
        </div>
    </div>
</div>